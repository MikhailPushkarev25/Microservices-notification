<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="5" author="MPushkarev">

        <preConditions>
            <not>
                <tableExists schemaName="microservices" tableName="attachments"/>
            </not>
        </preConditions>

        <createTable tableName="attachments">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="message_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_attachments_message" references="messages(id)"/>
            </column>
            <column name="file_url" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="uploaded_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

</databaseChangeLog>